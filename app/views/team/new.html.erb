<div class = "row">
  <div class="col-1 my-5 text-left">
    <a class="btn btn-primary " href="javascript:history.back()"> Back</a>
  </div>
</div>
<%= form_with url:"create",class:"px-5 mx-5" ,method: :post do |form| %>
  <% if @team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :name , class:"text-left"%>
      <%= form.text_field :name ,class:"form-control"%>
    </div>
    <div class="form-group m-0 col-md-6" >
      <%= form.label :description %>
      <%= form.text_area :description ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :team_lead , class:"text-left"%>
      <%= form.select :team_lead,Employee.all.collect { |p| [ p.name, p.id ] } %>
    </div>
   <div class="form-group m-0 col-md-6">
      <%= form.label :divisions_id , class:"text-left"%>
      <%= form.select :divisions_id, Division.all.collect { |p| [ p.name, p.id ] } %>
    </div>
  </div>
  
  <div class="row my-5">
    <div class="form-group col-md-11">
    </div>
    <div class="form-group col-md-1" >
      <%= form.submit "Submit" ,class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
