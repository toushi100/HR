<div class = "row">
  <div class="col-1 my-5 text-left">
    <a class="btn btn-primary rounded-1" href="javascript:history.back()"> Back</a>
  </div>
</div>
<%= form_with url:"create",class:"px-5 mx-5" ,method: :post do |form| %>
  <% if @target.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@target.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @target.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :title , class:"text-left"%>
      <%= form.text_field :title ,class:"form-control"%>
    </div>
    <div class="form-group m-0 col-md-6" >
      <%= form.label :description %>
      <%= form.text_area :description ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :start_date , class:"text-left"%>
      <%= form.date_field :start_date ,class:"form-control"%>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :finish_date, class:"m-0 p-0 text-left"  %>
      <%= form.date_field :finish_date ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :team , class:"text-left"%>
      <%= form.text_field :team ,class:"form-control"%>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :status, class:"m-0 p-0 text-left"  %>
      <%= form.text_field :status ,class:"form-control"%>
    </div>
  </div>


<div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :team_id , class:"text-left"%>
      <%= form.select :team_id,Team.all.collect { |p| [ p.name, p.id ] } %>

      
    </div>

  </div>


  <div class="row my-5">
    <div class="form-group col-md-11">
    </div>
    <div class="form-group col-md-1" >
      <%= form.submit "Submit" ,class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
