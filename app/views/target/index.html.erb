
<div class = "row">
  <div class="col-1 my-5 text-left">
    <a class="btn btn-primary rounded-1" href="javascript:history.back()"> <%= t'button.back'%></a>
  </div>
  <div class="col-10 my-5 text-right p-0">
  
  </div>
  <div class="col-1 my-5 text-right p-0">
    <a class="btn btn-primary rounded-1  float-right" href="target/new"> <%= t'button.newtar'%></a>
  </div>
</div>
<h1><%= t'target.index.target'%></h1>


<div class="container  mt-5 pt-5">
  <div class="row d-flex justify-content-center">
  <% if @target.count == 0%>
  <div class="row">
  <div class="col-md-6   py-5">
  <h1 class="fw-bold">Oops . . . </h1>
  <h3>We couldn't find any records</h3>
  <h3>please add some</h3>
  </div>
  <div class="col-md-6">
<%= image_tag 'image1.png',class:"w-75"%>
  
  </div>
  </div>

  <% else %>
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col"><%= t'target.index.id'%></th>
          <th scope="col"><%= t'target.index.title'%></th>
          <th scope="col"><%= t'target.index.description'%></th>
          <th scope="col"><%= t'target.index.start'%> </th>
          <th scope="col"><%= t'target.index.finish'%> </th>
          <th scope="col"><%= t'target.index.team'%></th>
          <th scope="col"><%= t'target.index.status'%></th>
          <th class = "text-center"scope="col"><%= t'target.index.links'%></th>
        </tr>
      </thead>
      <% for tar in @target%>
        <tbody>
          <tr>
           <% @team =  Team.where(id: tar.team_id) %>
            <td><%= tar.id %></td>
            <td><%= tar.title %> </td>
            <td><%= tar.description %></td>
            <td> <%= tar.start_date %></td>
            <td> <%= tar.finish_date %> </td>
            <td> 
            <% @team = Team.where(id: tar.team_id) %> 
            <% unless @team.length == 0 %>
            <%= @team[0].name %> 
            <%else%>
            No Team is assigned 
            <%end%>
            </td>
       
            <td>  <%= tar.status %> </td>
            <td><a class = "btn btn-primary p-1 py-0" href = "target/<%=tar.id%>"><%= t'button.show'%></a></td>
            <td><a class = "btn btn-warning p-1 py-0"href = "target/<%=tar.id%>/edit"><%= t'button.edit'%></a></td>
            <td><%= button_to I18n.t('button.delete'),{ action: "destroy", id: tar.id },
                                method: :delete, data: { confirm: "Are you sure?" } ,
                                class: "btn btn-danger p-1 py-0"%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <% end %>
  </div>
</div>