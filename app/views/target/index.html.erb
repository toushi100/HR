<h1>Target</h1>


<div class="container  mt-5 pt-5">
  <div class="row d-flex justify-content-center">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">description</th>
          <th scope="col">Start date</th>
          <th scope="col">Finish Date</th>
          <th scope="col">Team</th>
          <th scope="col">Status</th>
          <th class = "text-center"scope="col">Links</th>
        </tr>
      </thead>
      <% for target in @target%>
        <tbody>
          <tr>
            <td><%= target.id %></td>
            <td><%= target.title %> </td>
            <td><%= target.description %></td>
            <td> <%= target.start_date %></td>
            <td> <%= target.finish_date %> </td>
            <td> <%= target.team %> </td>
       
            <td>  <%= target.status %> </td>
            <td><a class = "btn btn-primary p-1 py-0">show</a></td>
            <td><a class = "btn btn-warning p-1 py-0">edit</a></td>
            <td><a class = "btn btn-danger p-1 py-0">delete</a></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>