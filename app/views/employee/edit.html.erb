<%= form_with model: @emp, url:"update",  local: true,class:"px-5 mx-5" ,method: :post do |form| %>
<% if @emp.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@emp.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @emp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :name , class:"text-left"%>
      <%= form.text_field :name ,class:"form-control"%>
    </div>
    <div class="form-group m-0 col-md-6" >
      <%= form.label :email %>
      <%= form.text_field :email ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group col-md-6">
      <%= form.label :job, class:"m-0 p-0 text-left"  %>
      <%= form.text_field :job ,class:"form-control"%>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :salary, class:"m-0 p-0 text-left"  %>
      <%= form.text_field :salary ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group col-md-6">
      <%= form.label :status, class:"m-0 p-0 text-left"  %>
      <%= form.text_field :employee_status ,class:"form-control"%>
    </div>
    <div class="form-group m-0 col-md-6">
      <%= form.label :teams_id , class:"text-left"%>
      <%= form.select :teams_id, Team.all.collect { |p| [ p.name, p.id ] },{},{class:"form-control "} %>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group col-md-11">
    </div>
    <div class="form-group col-md-1" >
      <%= form.submit I18n.t('button.submit') ,class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
