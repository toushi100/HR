<div class = "row">
  <div class="col-1 my-5 text-left">
    <a class="btn btn-primary rounded-1" href="javascript:history.back()"> <%= t'button.back'%></a>
  </div>
  <div class="col-10 my-5 text-right p-0">
  </div>
  <div class="col-1 my-5 text-right p-0">
    <a class="btn btn-primary rounded-1  float-right" href="division/new"> <%= t'button.newdiv'%></a>
  </div>
</div>
<h1><%= t'division.index.division'%></h1>
<div class="container  mt-5 pt-5">
  <div class="row d-flex justify-content-center">
  <% if @div.count == 0%>
  <div class="row">
  <div class="col-md-6   py-5">
  <h1 class="fw-bold">Oops . . . </h1>
  <h3>We couldn't find any records</h3>
  <h3>please add some</h3>
  </div>
  <div class="col-md-6">
<%= image_tag 'image1.png',class:"w-75"%>
  
  </div>
  </div>

  <% else %>
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col"><%= t'division.index.id'%></th>
          <th scope="col"><%= t'division.index.name'%></th>
          <th scope="col"><%= t'division.index.description'%></th>
          <th scope="col"><%= t'division.index.teams'%></th>
          <th scope="col"><%= t'division.index.manager'%></th>
          <th class = "text-center"scope="col"><%= t'division.index.links'%></th>
        </tr>
      </thead>
      <% for div in @div%>
        <tbody>
          <tr>
            <td><%= div.id %></td>
            <td><%= div.name %> </td>
            <td><%= div.description %> </td>
            <td><% for i in Team.where(divisions_id:div.id)%><%=i.name%></br><%end%></td>
            <td><%= div.manager %> </td>
            <td><a class = "btn btn-primary p-1 py-0" href = "division/<%=div.id%>"><%= t'button.show'%></a></td>
            <td><a class = "btn btn-warning p-1 py-0" href = "division/<%=div.id%>/edit"><%= t'button.edit'%></a></td>
            <td><%= button_to I18n.t('button.delete'),{ action: "destroy", id: div.id },
                                method: :delete, data: { confirm: "Are you sure?" } ,
                                class: "btn btn-danger p-1 py-0"%></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%end%>
  </div>
</div>
