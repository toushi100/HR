<h1>Team</h1>


<div class="container  mt-5 pt-5">
  <div class="row d-flex justify-content-center">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Description</th>
          <th scope="col">Teams</th>
          <th scope="col">Manager</th>
          <th class = "text-center"scope="col">Links</th>
        </tr>
      </thead>
      <% for div in @div%>
        <tbody>
          <tr>
            <td><%= div.id %></td>
            <td><%= div.description %> </td>
            <td><%=div.teams%></td>
            <td><%= div.manager %> </td>
            <td><a class = "btn btn-primary p-1 py-0">show</a></td>
            <td><a class = "btn btn-warning p-1 py-0">edit</a></td>
            <td><a class = "btn btn-danger p-1 py-0">delete</a></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>