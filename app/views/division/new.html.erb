<div class = "row">
  <div class="col-1 my-5 text-left">
    <a class="btn btn-primary rounded-1" href="javascript:history.back()"> Back</a>
  </div>
  </div>

<%= form_with url:"create",class:"px-5 mx-5" ,method: :post do |form| %>
  <% if @div.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@div.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @div.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :name , class:"text-left"%>
      <%= form.text_field :name ,class:"form-control"%>
    </div>
    <div class="form-group m-0 col-md-6" >
      <%= form.label :description %>
      <%= form.text_field :description ,class:"form-control"%>
    </div>
  </div>
  <div class="row my-5">
    <div class="form-group m-0 col-md-6">
      <%= form.label :manager , class:"text-left"%>
      <%= form.select :employees_id, Employee.all.collect { |p| [ p.name, p.id ] } %>
    </div>
  </div>
    
  <div class="row my-5">
    <div class="form-group col-md-11">
    </div>
    <div class="form-group col-md-1" >
      <%= form.submit "Submit" ,class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
